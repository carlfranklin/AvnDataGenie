@* 
    ========================================
    Component: Home (Database Schema)
    ========================================
    Purpose: Landing page for database schema generation.
            Allows users to connect to SQL Server and extract database schema
            or load previously saved schema from file.
    
    Key Features:
    - SQL Server connection string input
    - Automatic schema generation from database
    - Schema file loading/saving
    - Schema deletion
    - Navigation to LLM configuration
    - Persistent schema storage (database_schema.json)
    
    Dependencies:
    - SchemaGenerator.Generator (injected) - Database schema extraction
    - AppState (injected) - Application state management
    - NavigationManager (injected) - Page navigation
    
    Route: / (root/home page)
    ========================================
*@
@page "/"
@using SchemaGenerator
@using SchemaGenerator.Models
@using System.Text.Json
@inject SchemaGenerator.Generator generator
@inject AppState appState
@inject NavigationManager navigationManager

@rendermode InteractiveServer

<PageTitle>AvnDataGenie - Database Schema</PageTitle>

@* Page header with title and description *@
<div class="page-header">
    <div class="page-header-content">
        <h1 class="page-title">Database Schema</h1>
        <p class="page-description">Generate or load your database schema to get started with AvnDataGenie configuration.</p>
    </div>
</div>

<div class="content-grid">
    <div class="main-card">
        @* Connection Settings Card *@
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">
                    <span class="card-icon">üîó</span>
                    Connection Settings
                </h2>
            </div>
            <div class="card-body">
                @* SQL Server connection string input *@
                <div class="form-group">
                    <label for="connectionString" class="form-label">SQL Server Connection String</label>
                    <textarea id="connectionString"
                              class="form-control connection-input"
                              rows="3"
                              placeholder="Enter your SQL Server connection string..."
                              @bind="connectionString"></textarea>
                    <small class="form-text text-muted">The connection string will be used to extract the database schema.</small>
                </div>

                @* Action buttons for schema generation and loading *@
                <div class="button-group">
                    @* Generate schema from database connection *@
                    <button class="btn btn-primary btn-lg" @onclick="GenerateSchema" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Generating...</span>
                        }
                        else
                        {
                            <span class="btn-icon">‚ö°</span>
                            <span>Generate Schema</span>
                        }
                    </button>

                    @* Load schema from existing file (disabled if file doesn't exist) *@
                    <button class="btn btn-outline-secondary btn-lg" @onclick="LoadSchema" disabled="@LoadSchemaButtonDisabled">
                        <span class="btn-icon">üìÇ</span>
                        <span>Load Existing</span>
                    </button>
                </div>
            </div>
        </div>

        @* Error message display *@
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-3" role="alert">
                <span class="alert-icon">‚ö†Ô∏è</span>
                <div class="alert-content">
                    <strong>Error</strong>
                    <p>@errorMessage</p>
                </div>
            </div>
        }

        @* Schema Output Card (only shown when schema exists) *@
        @if (!string.IsNullOrEmpty(appState.SchemaJson))
        {
            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="card-title">
                        <span class="card-icon">üìã</span>
                        Schema Output
                    </h2>
                    @* Schema management buttons *@
                    <div class="schema-actions">
                        @* Delete schema file and clear state *@
                        <button class="btn btn-outline-danger btn-sm" @onclick="DeleteSchema">
                            <span>üóëÔ∏è</span> Delete
                        </button>
                        @* Navigate to LLM configuration page *@
                        <button class="btn btn-success btn-sm" @onclick="GoToConfigurePage">
                            <span>‚öôÔ∏è</span> Configure LLM
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @* Read-only textarea displaying the generated schema JSON *@
                    <textarea id="schemaOutput"
                          class="form-control schema-output"
                          rows="20"
                          readonly="readonly">@appState.SchemaJson</textarea>
                </div>
            </div>
        }
    </div>


</div>

@code {
    // ========================================
    // Fields - Component State
    // ========================================
    
    // Default connection string pointing to local Chinook database
    private string connectionString = "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=Chinook;Integrated Security=True;Connect Timeout=30;Encrypt=True;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False;Command Timeout=30";
    
    // Error message to display to user when operations fail
    private string errorMessage = string.Empty;
    
    // Loading state for schema generation button
    private bool isLoading = false;
    
    // Save operation status messages (not currently displayed in UI)
    private string saveMessage = string.Empty;
    private string saveError = string.Empty;

    // ========================================
    // Lifecycle Methods
    // ========================================
    
    /// <summary>
    /// Initialize component on page load.
    /// Sets up file paths and loads existing schema/config if available.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        // Set default file paths for schema and config storage
        appState.SaveFilePath = Path.Combine(Environment.CurrentDirectory, "database_schema.json");
        appState.ConfigSaveFilePath = Path.Combine(Environment.CurrentDirectory, "llm_config.json");
        appState.RefreshFileStatus();
        
        // Auto-load schema if file exists
        if (File.Exists(appState.SaveFilePath))
            await LoadSchema();
            
        // Auto-load LLM config if file exists
        if (File.Exists(appState.ConfigSaveFilePath))
            await LoadConfig();
    }

    // ========================================
    // Schema Operations
    // ========================================
    
    /// <summary>
    /// Generates database schema by connecting to SQL Server.
    /// Extracts tables, columns, relationships and saves to file.
    /// </summary>
    private async Task GenerateSchema()
    {
        // Clear previous messages and state
        errorMessage = string.Empty;
        appState.SchemaJson = string.Empty;
        saveMessage = string.Empty;
        saveError = string.Empty;

        // Validate connection string is provided
        if (string.IsNullOrWhiteSpace(connectionString))
        {
            errorMessage = "Please enter a connection string.";
            return;
        }

        // Set loading state and refresh UI
        isLoading = true;
        StateHasChanged();

        try
        {
            // Call generator to extract schema from database
            var schema = await generator.GenerateDatabaseSchemaAsync(connectionString);

            // Serialize schema to JSON with formatting
            var options = new JsonSerializerOptions
            {
                WriteIndented = true,
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase
            };

            // Store schema in AppState
            appState.SchemaJson = JsonSerializer.Serialize(schema, options);
            appState.DatabaseSchema = schema;
            appState.ConnectionString = connectionString;  // Save connection string for later use
            appState.NotifyStateChanged();

            // Persist schema to file
            try
            {
                await File.WriteAllTextAsync(appState.SaveFilePath, appState.SchemaJson);
                appState.RefreshFileStatus();
                saveMessage = $"Successfully saved to: {appState.SaveFilePath}";
            }
            catch (Exception ex)
            {
                saveError = ex.Message;
            }
        }
        catch (Exception ex)
        {
            // Display database connection or extraction errors
            errorMessage = ex.Message;
        }
        finally
        {
            // Clear loading state and refresh UI
            isLoading = false;
            StateHasChanged();
        }
    }

    /// <summary>
    /// Loads schema from existing database_schema.json file.
    /// </summary>
    private async Task LoadSchema()
    {
        // Check if schema file exists
        if (File.Exists(appState.SaveFilePath))
        {
            try
            {
                // Read and deserialize schema JSON
                appState.SchemaJson = await File.ReadAllTextAsync(appState.SaveFilePath);
                var options = new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase };
                appState.DatabaseSchema = JsonSerializer.Deserialize<DatabaseSchema>(appState.SchemaJson, options);
                
                // Clear any previous errors
                errorMessage = string.Empty;
                
                // Refresh file metadata and notify state change
                appState.RefreshFileStatus();
                appState.NotifyStateChanged();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error loading schema: {ex.Message}";
            }
        }
        else
        {
            errorMessage = "Schema file does not exist. Please generate the schema first.";
        }
    }

    /// <summary>
    /// Deletes the schema file and clears schema from AppState.
    /// </summary>
    private async Task DeleteSchema()
    {
        // Check if schema file exists before attempting deletion
        if (File.Exists(appState.SaveFilePath))
        {
            try
            {
                // Delete file and clear AppState
                File.Delete(appState.SaveFilePath);
                appState.SchemaJson = string.Empty;
                appState.DatabaseSchema = null;
                appState.SchemaFileLastModified = null;
                errorMessage = string.Empty;
                
                // Refresh file status and notify state change
                appState.RefreshFileStatus();
                appState.NotifyStateChanged();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting schema: {ex.Message}";
            }
        }
        else
        {
            errorMessage = "Schema file does not exist.";
        }
    }

    // ========================================
    // Configuration Operations
    // ========================================
    
    /// <summary>
    /// Loads LLM configuration from llm_config.json file.
    /// Called during initialization if config file exists.
    /// </summary>
    private async Task LoadConfig()
    {
        try
        {
            // Read and deserialize LLM configuration
            var json = await File.ReadAllTextAsync(appState.ConfigSaveFilePath);
            var config = JsonSerializer.Deserialize<LlmConfiguration>(json, new JsonSerializerOptions 
            { 
                PropertyNameCaseInsensitive = true 
            });
            
            // Update AppState if config was successfully loaded
            if (config != null)
            {
                appState.LlmConfiguration = config;
                appState.ConfigurationSaved = true;
                appState.RefreshFileStatus();
                appState.NotifyStateChanged();
            }
        }
        catch (Exception ex)
        {
            // Silently log config loading errors (file may not exist on first run)
            Console.WriteLine($"Error loading config: {ex.Message}");
        }
    }

    // ========================================
    // Navigation
    // ========================================
    
    /// <summary>
    /// Navigates to the LLM configuration page.
    /// </summary>
    private async Task GoToConfigurePage()
    {
        navigationManager.NavigateTo("/config");
    }

    // ========================================
    // Computed Properties
    // ========================================
    
    /// <summary>
    /// Determines if the "Load Existing" button should be disabled.
    /// Disabled when no schema file exists.
    /// </summary>
    private bool LoadSchemaButtonDisabled
    {
        get
        {
            return !File.Exists(appState.SaveFilePath);
        }
    }
}

