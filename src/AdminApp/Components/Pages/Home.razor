@page "/"
@using QueryGenerator
@using QueryGenerator.Models
@using System.Text.Json
@inject Generator generator
@inject AppState appState
@inject NavigationManager navigationManager

@rendermode InteractiveServer

<PageTitle>AvnDataGenie - Database Schema</PageTitle>

<div class="page-header">
    <div class="page-header-content">
        <h1 class="page-title">Database Schema</h1>
        <p class="page-description">Generate or load your database schema to get started with AvnDataGenie configuration.</p>
    </div>
</div>

<div class="content-grid">
    <div class="main-card">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">
                    <span class="card-icon">üîó</span>
                    Connection Settings
                </h2>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="connectionString" class="form-label">SQL Server Connection String</label>
                    <textarea id="connectionString"
                              class="form-control connection-input"
                              rows="3"
                              placeholder="Enter your SQL Server connection string..."
                              @bind="connectionString"></textarea>
                    <small class="form-text text-muted">The connection string will be used to extract the database schema.</small>
                </div>

                <div class="button-group">
                    <button class="btn btn-primary btn-lg" @onclick="GenerateSchema" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Generating...</span>
                        }
                        else
                        {
                            <span class="btn-icon">‚ö°</span>
                            <span>Generate Schema</span>
                        }
                    </button>

                    <button class="btn btn-outline-secondary btn-lg" @onclick="LoadSchema" disabled="@LoadSchemaButtonDisabled">
                        <span class="btn-icon">üìÇ</span>
                        <span>Load Existing</span>
                    </button>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-3" role="alert">
                <span class="alert-icon">‚ö†Ô∏è</span>
                <div class="alert-content">
                    <strong>Error</strong>
                    <p>@errorMessage</p>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(appState.SchemaJson))
        {
            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="card-title">
                        <span class="card-icon">üìã</span>
                        Schema Output
                    </h2>
                    <div class="schema-actions">
                        <button class="btn btn-outline-danger btn-sm" @onclick="DeleteSchema">
                            <span>üóëÔ∏è</span> Delete
                        </button>
                        <button class="btn btn-success btn-sm" @onclick="GoToConfigurePage">
                            <span>‚öôÔ∏è</span> Configure LLM
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <textarea id="schemaOutput"
                          class="form-control schema-output"
                          rows="20"
                          readonly="readonly">@appState.SchemaJson</textarea>
                </div>
            </div>
        }
    </div>


</div>

