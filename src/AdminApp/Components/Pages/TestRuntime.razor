@* 
    ========================================
    Component: TestRuntime
    ========================================
    Purpose: Interactive testing page for LLM-generated SQL queries.
            Allows users to input natural language queries and receive
            generated SQL statements with syntax highlighting.
    
    Key Features:
    - Natural language to SQL conversion using LLM
    - Query history with persistence (browser storage)
    - Advanced configuration overrides (schema/LLM config)
    - Configuration validation before testing
    - Markdown rendering with syntax highlighting
    - Copy to clipboard functionality
    - Direct execution navigation
    
    Dependencies:
    - AvnDataGenie.Generator (injected) - LLM SQL generation
    - AppState (injected) - Application state management
    - IJSRuntime (injected) - JavaScript interop for clipboard
    - NavigationManager (injected) - Page navigation
    - Markdig - Markdown parsing with syntax highlighting
    
    Route: /testruntime
    ========================================
*@
@page "/testruntime"
@inject AvnDataGenie.Generator DataGenerator
@inject AppState appState
@inject IJSRuntime JSRuntime
@inject AppState appState
@inject NavigationManager navigationManager
@using Markdig
@using Markdig.SyntaxHighlighting
@using System.Text.Json
@implements IAsyncDisposable

@rendermode InteractiveServer

<PageTitle>Test Runtime - AvnDataGenie</PageTitle>

@* Page header with title and description *@
<div class="page-header">
    <div class="page-header-content">
        <h1 class="page-title">Test Your Configuration</h1>
        <p class="page-description">Generate SQL queries from natural language to verify your schema and configuration are working correctly.</p>
    </div>
</div>

@* Show setup required message if configuration is incomplete *@
@if (!IsConfigurationReady)
{
    <div class="setup-required-card">
        <div class="setup-icon">‚ö†Ô∏è</div>
        <h3>Configuration Required</h3>
        <p>Please complete the setup steps before testing. You need both a database schema and LLM configuration.</p>
        @* Status indicators for schema and configuration *@
        <div class="setup-status">
            <div class="status-item @(appState.HasSchema ? "complete" : "pending")">
                <span class="status-icon">@(appState.HasSchema ? "‚úì" : "‚óã")</span>
                <span>Database Schema (@(appState.DatabaseSchema?.Tables.Count ?? 0) tables)</span>
            </div>
            <div class="status-item @(appState.HasConfiguration ? "complete" : "pending")">
                <span class="status-icon">@(appState.HasConfiguration ? "‚úì" : "‚óã")</span>
                <span>LLM Configuration (@appState.ConfiguredTablesCount configs)</span>
            </div>
        </div>
        @* Debug info showing state load status *@
        <p style="font-size: 0.875rem; color: #666;">State loaded: @_stateLoaded, Has Schema: @appState.HasSchema, Has Config: @appState.HasConfiguration</p>
        <a href="" class="btn btn-primary">
            <span>üîó</span> Go to Setup
        </a>
    </div>
}
else
{
    @* Main testing interface (only shown when configuration is ready) *@
    <div class="test-layout">
        @* Query Input Section *@
        <div class="query-section">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">
                        <span class="card-icon">üí¨</span>
                        Natural Language Query
                    </h2>
                </div>
                <div class="card-body">
                    @* Main query input textarea *@
                    <textarea class="form-control query-input" 
                              rows="4" 
                              @bind="NaturalLanguageInput" 
                              placeholder="Describe what data you want to retrieve...

    Example: Show the top 10 selling albums of all time with sales numbers"></textarea>
                    
                    @* Query history section (only shown if history exists) *@
                    @if (appState.QueryHistory.Any())
                    {
                        <div class="query-history">
                            <label class="query-history-label">Recent Queries:</label>
                            <div class="query-history-list">
                                @* Display each historical query with select and delete buttons *@
                                @foreach (var query in appState.QueryHistory)
                                {
                                    <div class="query-history-item">
                                        @* Click to load query into input *@
                                        <button class="query-history-btn" @onclick="() => SelectHistoryQuery(query)" title="@query">
                                            @(query.Length > 60 ? query.Substring(0, 60) + "..." : query)
                                        </button>
                                        @* Delete query from history *@
                                        <button class="query-history-delete" @onclick="() => RemoveFromHistory(query)" title="Remove from history">
                                            ‚úï
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    
                    @* Action buttons for query generation and configuration *@
                    <div class="query-actions">
                        @* Primary action: Generate SQL from natural language *@
                        <button class="btn btn-primary btn-lg" @onclick="GenerateSQL" disabled="@IsGenerating">
                            @if (IsGenerating)
                            {
                                <span class="spinner"></span>
                                <span>Generating...</span>
                            }
                            else
                            {
                                <span class="btn-icon">‚ö°</span>
                                <span>Generate SQL</span>
                            }
                        </button>
                        
                        @* Toggle advanced configuration panel *@
                        <button class="btn btn-outline-secondary" @onclick="ToggleAdvanced">
                            <span class="btn-icon">@(showAdvanced ? "‚ñº" : "‚ñ∂")</span>
                            <span>@(showAdvanced ? "Hide" : "Show") Configuration</span>
                        </button>
                    </div>
                </div>
            </div>

            @* Advanced configuration panel (collapsible) *@
            @if (showAdvanced)
            {
                <div class="advanced-section">
                    <div class="config-panels">
                        @* Database schema override panel *@
                        <div class="config-panel">
                            <div class="config-panel-header">
                                <span class="config-icon">üóÑÔ∏è</span>
                                <span class="config-label">Database Schema</span>
                                @* Badge showing if using custom or setup values *@
                                <span class="config-source @(useCustomSchema ? "custom" : "default")">
                                    @(useCustomSchema ? "Custom" : "From Setup")
                                </span>
                            </div>
                            @* Editable schema JSON (triggers custom flag on change) *@
                            <textarea class="form-control config-textarea" 
                                      rows="10" 
                                      @bind="databaseSchema"
                                      @oninput="OnSchemaChanged"></textarea>
                        </div>
                        @* LLM configuration override panel *@
                        <div class="config-panel">
                            <div class="config-panel-header">
                                <span class="config-icon">‚öôÔ∏è</span>
                                <span class="config-label">LLM Configuration</span>
                                @* Badge showing if using custom or setup values *@
                                <span class="config-source @(useCustomConfig ? "custom" : "default")">
                                    @(useCustomConfig ? "Custom" : "From Setup")
                                </span>
                            </div>
                            @* Editable LLM config JSON (triggers custom flag on change) *@
                            <textarea class="form-control config-textarea" 
                                      rows="10" 
                                      @bind="llmConfig"
                                      @oninput="OnConfigChanged"></textarea>
                        </div>
                    </div>
                    @* Configuration action buttons *@
                    <div class="config-actions">
                        @* Reset to values from setup wizard (disabled if already using defaults) *@
                        <button class="btn btn-outline-secondary btn-sm" @onclick="ResetToDefaults" disabled="@(!useCustomSchema && !useCustomConfig)">
                            <span>‚Ü∫</span> Reset to Setup Values
                        </button>
                        @* Load from local JSON files *@
                        <button class="btn btn-outline-secondary btn-sm" @onclick="LoadFromFiles">
                            <span>üìÇ</span> Load from Files
                        </button>
                    </div>
                </div>
            }
        </div>

        @* Results Section *@
        <div class="results-section">
            @* Display generated SQL with syntax highlighting *@
            @if (!string.IsNullOrEmpty(GeneratedSQLHtml))
            {
                <div class="card result-card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <span class="card-icon">üìù</span>
                            Generated SQL
                        </h2>
                        <div class="header-actions">
                            @* Copy SQL to clipboard *@
                            <button class="btn btn-outline-secondary btn-sm" @onclick="CopyToClipboard">
                                <span>üìã</span> Copy
                            </button>
                            @* Navigate to execution page *@
                            <button class="btn btn-primary btn-sm" @onclick="ExecuteResults">
                                <span>‚ñ∂Ô∏è</span> Execute Statement
                            </button>
                        </div>
                    </div>
                    <div class="card-body result-body">
                        @* Render markdown-formatted SQL with syntax highlighting *@
                        <div class="markdown-content">
                            @((MarkupString)GeneratedSQLHtml)
                        </div>
                    </div>
                </div>
            }
            else
            {
                @* Empty state when no SQL has been generated yet *@
                <div class="empty-results">
                    <div class="empty-icon">üîç</div>
                    <h3>No Results Yet</h3>
                    <p>Enter a natural language query above and click "Generate SQL" to see the results.</p>
                </div>
            }
        </div>
    </div>
}

@code {
    // ========================================
    // Fields - Component State
    // ========================================
    
    // Database schema JSON (can be overridden from setup values)
    private string databaseSchema = string.Empty;
    
    // LLM configuration JSON (can be overridden from setup values)
    private string llmConfig = string.Empty;
    
    // Toggle for showing/hiding advanced configuration panel
    private bool showAdvanced = false;
    
    // Flag indicating if user has modified schema from setup defaults
    private bool useCustomSchema = false;
    
    // Flag indicating if user has modified LLM config from setup defaults
    private bool useCustomConfig = false;
    
    // Markdown pipeline with syntax highlighting for SQL rendering
    private static readonly MarkdownPipeline pipeline = new MarkdownPipelineBuilder()
        .UseSyntaxHighlighting()
        .Build();

    // ========================================
    // Properties - Public State
    // ========================================
    
    // User's natural language query input (default query provided)
    public string NaturalLanguageInput { get; set; } = "Show me the top 10 selling albums of all time with their sales numbers";
    
    // Raw SQL generated by LLM
    public string GeneratedSQL { get; set; } = string.Empty;
    
    // HTML-rendered SQL with syntax highlighting (from Markdown)
    public string GeneratedSQLHtml { get; set; } = string.Empty;
    
    // Loading state for SQL generation button
    public bool IsGenerating { get; set; } = false;

    // Flag tracking if AppState has been loaded from browser storage
    private bool _stateLoaded = false;

    // Computed property checking if configuration is complete and ready for testing
    private bool IsConfigurationReady => _stateLoaded && appState.HasSchema && appState.HasConfiguration;

    // ========================================
    // Lifecycle Methods
    // ========================================
    
    /// <summary>
    /// Initialize component on first render.
    /// Loads schema and LLM config from AppState (setup wizard values).
    /// </summary>
    protected override void OnInitialized()
    {
        // Load from AppState (setup wizard values)
        LoadFromAppState();
        
        // Debug checkpoint - Check if configuration exists
        // SET BREAKPOINT HERE to inspect AppState configuration status
        var hasSchema = appState.HasSchema;
        var hasConfig = appState.HasConfiguration;
        var tableCount = appState.DatabaseSchema?.Tables.Count ?? 0;
        var configCount = appState.ConfiguredTablesCount;
    }

    /// <summary>
    /// Loads database schema and LLM configuration from AppState.
    /// Called on initialization and when resetting to defaults.
    /// </summary>
    private void LoadFromAppState()
    {
        // Load schema JSON if available in AppState
        if (appState.HasSchema)
        {
            databaseSchema = appState.SchemaJson;
        }
        
        // Serialize and load LLM configuration if available
        if (appState.HasConfiguration)
        {
            var options = new JsonSerializerOptions 
            { 
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase,
                WriteIndented = true
            };
            llmConfig = JsonSerializer.Serialize(appState.LlmConfiguration, options);
        }
        
        // Reset custom flags (using setup values, not custom)
        useCustomSchema = false;
        useCustomConfig = false;
    }

    // ========================================
    // UI Event Handlers
    // ========================================
    
    /// <summary>
    /// Toggles visibility of advanced configuration panel.
    /// </summary>
    private void ToggleAdvanced()
    {
        showAdvanced = !showAdvanced;
    }

    /// <summary>
    /// Event handler for schema textarea input.
    /// Marks schema as custom-modified when user types.
    /// </summary>
    private void OnSchemaChanged(ChangeEventArgs e)
    {
        useCustomSchema = true;
    }

    /// <summary>
    /// Event handler for LLM config textarea input.
    /// Marks config as custom-modified when user types.
    /// </summary>
    private void OnConfigChanged(ChangeEventArgs e)
    {
        useCustomConfig = true;
    }

    /// <summary>
    /// Resets schema and LLM config to values from setup wizard.
    /// Clears custom modification flags.
    /// </summary>
    private void ResetToDefaults()
    {
        LoadFromAppState();
    }

    /// <summary>
    /// Loads schema and LLM config from local JSON files.
    /// Expects database_schema.json and llm_config.json in working directory.
    /// </summary>
    private void LoadFromFiles()
    {
        try
        {
            // Attempt to load database schema from file
            if (File.Exists("database_schema.json"))
            {
                databaseSchema = File.ReadAllText("database_schema.json");
                useCustomSchema = true;
            }
            
            // Attempt to load LLM config from file
            if (File.Exists("llm_config.json"))
            {
                llmConfig = File.ReadAllText("llm_config.json");
                useCustomConfig = true;
            }
        }
        catch (Exception ex)
        {
            // Silently handle file read errors (files may not exist)
            Console.WriteLine($"Error loading files: {ex.Message}");
        }
    }

    // ========================================
    // Core Functionality
    // ========================================
    
    /// <summary>
    /// Generates SQL from natural language query using LLM.
    /// Adds query to history, stores result in AppState, and renders with syntax highlighting.
    /// </summary>
    /// <param name="args">Mouse event args (optional, allows programmatic triggering)</param>
    private async Task GenerateSQL(MouseEventArgs? args = null)
    {
        // Validate input exists
        if (string.IsNullOrWhiteSpace(NaturalLanguageInput))
            return;

        // Set loading state and refresh UI
        IsGenerating = true;
        StateHasChanged();

        try
        {
            // Call LLM generator with current schema and config
            GeneratedSQL = await DataGenerator.GenerateStatementFromNlq(NaturalLanguageInput, databaseSchema, llmConfig);
            
            // Add query to history and persist to browser storage
            await appState.AddQueryToHistoryAsync(NaturalLanguageInput);
            
            // Store SQL in AppState for SQLResults page to execute
            appState.SQLString = GeneratedSQL;
            
            // Convert SQL to markdown with syntax highlighting
            // Only add code fences if not already present
            string markdownContent = GeneratedSQL.StartsWith("```")
                                ? GeneratedSQL
                                : $"```sql\n{GeneratedSQL}\n```";
            GeneratedSQLHtml = Markdown.ToHtml(markdownContent, pipeline);

            // Track test completion metrics in AppState
            appState.TestCompleted = true;
            appState.LastTestRun = DateTime.Now;
            appState.LastTestQueryCount = (appState.LastTestQueryCount ?? 0) + 1;
            appState.NotifyStateChanged();
        }
        catch (Exception ex)
        {
            // Handle LLM generation errors by displaying error as SQL comment
            GeneratedSQL = $"-- Error generating SQL:\n-- {ex.Message}";
            
            // Render error message with syntax highlighting
            string errorMarkdown = GeneratedSQL.StartsWith("```")
                ? GeneratedSQL
                : $"```sql\n{GeneratedSQL}\n```";
            GeneratedSQLHtml = Markdown.ToHtml(errorMarkdown, pipeline);
        }
        finally
        {
            // Clear loading state and refresh UI
            IsGenerating = false;
            StateHasChanged();
        }
    }

    /// <summary>
    /// Copies generated SQL to clipboard using JavaScript interop.
    /// Falls back to legacy method for older browsers.
    /// </summary>
    private async Task CopyToClipboard()
    {
        try
        {
            // Use modern Clipboard API
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", GeneratedSQL);
        }
        catch
        {
            // Fallback for older browsers without Clipboard API
            await JSRuntime.InvokeVoidAsync("fallbackCopyToClipboard", GeneratedSQL);
        }
    }

    /// <summary>
    /// Navigates to SQL Results page to execute the generated SQL.
    /// SQL is already stored in AppState.SQLString.
    /// </summary>
    private void ExecuteResults()
    {
        navigationManager.NavigateTo("/sqlresults");
    }

    // ========================================
    // Query History Management
    // ========================================
    
    /// <summary>
    /// Loads a historical query into the input field.
    /// Allows user to re-run or modify previous queries.
    /// </summary>
    /// <param name="query">The query text to load</param>
    private void SelectHistoryQuery(string query)
    {
        if (!string.IsNullOrEmpty(query))
        {
            NaturalLanguageInput = query;
            StateHasChanged();
        }
    }

    /// <summary>
    /// Removes a query from history and persists the change.
    /// </summary>
    /// <param name="query">The query text to remove</param>
    private async Task RemoveFromHistory(string query)
    {
        appState.QueryHistory.Remove(query);
        await appState.SaveStateAsync();
        StateHasChanged();
    }

    // ========================================
    // Lifecycle - Post-Render
    // ========================================
    
    /// <summary>
    /// Called after component renders.
    /// On first render, initializes AppState and loads query history from browser storage.
    /// </summary>
    /// <param name="firstRender">True if this is the first render</param>
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Console.WriteLine("TestRuntime: OnAfterRenderAsync - first render, loading query history");
            
            // Initialize AppState with JSRuntime for browser storage access
            appState.Initialize(JSRuntime);
            
            // Load persisted state (query history, etc.) from browser storage
            await appState.LoadStateAsync();
            
            Console.WriteLine($"TestRuntime: Query history count after load: {appState.QueryHistory.Count}");
            
            // Mark state as loaded and re-render to show configuration status
            _stateLoaded = true;
            StateHasChanged();
        }
    }

    // ========================================
    // Lifecycle - Disposal
    // ========================================
    
    /// <summary>
    /// Cleanup when component is disposed.
    /// State saving happens when history changes, so no action needed here.
    /// </summary>
    public ValueTask DisposeAsync()
    {
        // No need to save on dispose - saves happen when history changes
        return ValueTask.CompletedTask;
    }
}