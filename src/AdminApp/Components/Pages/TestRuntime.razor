@code {
    private string databaseSchema = string.Empty;
    private string llmConfig = string.Empty;
    private bool showAdvanced = false;
    private bool useCustomSchema = false;
    private bool useCustomConfig = false;
    
    private static readonly MarkdownPipeline pipeline = new MarkdownPipelineBuilder()
        .UseSyntaxHighlighting()
        .Build();

    public string NaturalLanguageInput { get; set; } = "Show me the top 10 selling albums of all time with their sales numbers";
    public string GeneratedSQL { get; set; } = string.Empty;
    public string GeneratedSQLHtml { get; set; } = string.Empty;
    public bool IsGenerating { get; set; } = false;

    private bool _stateLoaded = false;

    private bool IsConfigurationReady => _stateLoaded && appState.HasSchema && appState.HasConfiguration;

    protected override void OnInitialized()
    {
        // Load from AppState (setup wizard values)
        LoadFromAppState();
        
        // SET BREAKPOINT HERE - Check appState.HasSchema and appState.HasConfiguration values
        var hasSchema = appState.HasSchema;
        var hasConfig = appState.HasConfiguration;
        var tableCount = appState.DatabaseSchema?.Tables.Count ?? 0;
        var configCount = appState.ConfiguredTablesCount;
    }

    private void LoadFromAppState()
    {
        if (appState.HasSchema)
        {
            databaseSchema = appState.SchemaJson;
        }
        
        if (appState.HasConfiguration)
        {
            var options = new JsonSerializerOptions 
            { 
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase,
                WriteIndented = true
            };
            llmConfig = JsonSerializer.Serialize(appState.LlmConfiguration, options);
        }
        
        useCustomSchema = false;
        useCustomConfig = false;
    }

    private void ToggleAdvanced()
    {
        showAdvanced = !showAdvanced;
    }

    private void OnSchemaChanged(ChangeEventArgs e)
    {
        useCustomSchema = true;
    }

    private void OnConfigChanged(ChangeEventArgs e)
    {
        useCustomConfig = true;
    }

    private void ResetToDefaults()
    {
        LoadFromAppState();
    }

    private void LoadFromFiles()
    {
        try
        {
            if (File.Exists("database_schema.json"))
            {
                databaseSchema = File.ReadAllText("database_schema.json");
                useCustomSchema = true;
            }
            
            if (File.Exists("llm_config.json"))
            {
                llmConfig = File.ReadAllText("llm_config.json");
                useCustomConfig = true;
            }
        }
        catch (Exception ex)
        {
            // Handle file read errors silently for now
            Console.WriteLine($"Error loading files: {ex.Message}");
        }
    }

    private async Task GenerateSQL(MouseEventArgs? args = null)
    {
        if (string.IsNullOrWhiteSpace(NaturalLanguageInput))
            return;

        IsGenerating = true;
        StateHasChanged();

        try
        {
            GeneratedSQL = await DataGenerator.GenerateStatementFromNlq(NaturalLanguageInput, databaseSchema, llmConfig);
            
            // Add query to history and save state
            await appState.AddQueryToHistoryAsync(NaturalLanguageInput);
            
            // Store in AppState for SQL Results page
            appState.SQLString = GeneratedSQL;
            
            // Convert SQL to markdown with syntax highlighting - only add code fences if not already present
            string markdownContent = GeneratedSQL.StartsWith("```")
                                ? GeneratedSQL
                                : $"```sql\n{GeneratedSQL}\n```";
            GeneratedSQLHtml = Markdown.ToHtml(markdownContent, pipeline);

            // Track test completion
            appState.TestCompleted = true;
            appState.LastTestRun = DateTime.Now;
            appState.LastTestQueryCount = (appState.LastTestQueryCount ?? 0) + 1;
            appState.NotifyStateChanged();
        }
        catch (Exception ex)
        {
            GeneratedSQL = $"-- Error generating SQL:\n-- {ex.Message}";
            
            string errorMarkdown = GeneratedSQL.StartsWith("```")
                ? GeneratedSQL
                : $"```sql\n{GeneratedSQL}\n```";
            GeneratedSQLHtml = Markdown.ToHtml(errorMarkdown, pipeline);
        }
        finally
        {
            IsGenerating = false;
            StateHasChanged();
        }
    }

    private async Task CopyToClipboard()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", GeneratedSQL);
        }
        catch
        {
            // Fallback for older browsers
            await JSRuntime.InvokeVoidAsync("fallbackCopyToClipboard", GeneratedSQL);
        }
    }

    private void ExecuteResults()
    {
        navigationManager.NavigateTo("/sqlresults");
    }

    private void SelectHistoryQuery(string query)
    {
        if (!string.IsNullOrEmpty(query))
        {
            NaturalLanguageInput = query;
            StateHasChanged();
        }
    }

    private async Task RemoveFromHistory(string query)
    {
        appState.QueryHistory.Remove(query);
        await appState.SaveStateAsync();
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Console.WriteLine("TestRuntime: OnAfterRenderAsync - first render, loading query history");
            
            appState.Initialize(JSRuntime);
            await appState.LoadStateAsync();
            
            Console.WriteLine($"TestRuntime: Query history count after load: {appState.QueryHistory.Count}");
            
            _stateLoaded = true;
            StateHasChanged();
        }
    }

    public ValueTask DisposeAsync()
    {
        // No need to save on dispose - saves happen when history changes
        return ValueTask.CompletedTask;
    }
}