@inherits LayoutComponentBase
@inject AppState AppState
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <header class="top-bar">
            <div class="top-bar-content">
                <div class="breadcrumb-area">
                    <span class="page-context">Configuration Portal</span>
                </div>
                <div class="top-bar-actions">
                    <a href="https://github.com/" target="_blank" class="top-link" title="Documentation">
                        <span class="icon">📖</span>
                        <span class="link-text">Docs</span>
                    </a>
                </div>
            </div>
        </header>

        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _initialized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
            AppState.Initialize(JSRuntime);
            await AppState.LoadStateAsync();
            StateHasChanged();
        }
    }

    public ValueTask DisposeAsync()
    {
        // No need to save on dispose - saves happen when history changes
        return ValueTask.CompletedTask;
    }
}
